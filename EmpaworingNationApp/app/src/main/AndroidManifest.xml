<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.empaworingnationapp">

    <!-- Add permissions here -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmpaworingNationApp"
        tools:targetApi="31">

        <!-- Activity for About Screen -->
        <activity
            android:name=".AboutScreen"
            android:exported="true" />

        <!-- Activity for Sewing Course Screen -->
        <activity
            android:name=".SewingCourseScreen"
            android:exported="true"/>

        <activity
            android:name=".ChildminingCourseScreen"
            android:exported="true"/>
        <activity
            android:name=".FirstaidCourseScreen"
            android:exported="true"/>
        <activity
            android:name=".LifeskillsCourseScreen"
            android:exported="true"/>
        <activity
            android:name=".LandscapingCourseScreen"
            android:exported="true"/>
        <activity
            android:name=".CookingCourseScreen"
            android:exported="true"/>
        <activity
            android:name=".CalculateFeesActivity"
            android:exported="true"/>
        <activity android:name="SixMonthsScreen"
            android:exported="true"/>
        <activity android:name="SixWeeksScreen"
            android:exported="true"/>
        <activity
            android:name="com.example.empaworingnationapp.GardenCourseScreen"
            android:exported="true"/>

        <activity
            android:name="com.example.empaworingnationapp.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
